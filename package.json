{
  "name": "minigames",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "linters": "npm run lint:biome && npm run lint",
    "lint": "eslint .",
    "lint:biome": "npx @biomejs/biome check ./src",
    "lint:biome:fix": "npm run lint:biome -- --write",
    "preview": "vite preview",
    "prepare": "husky",
    "test:playwright": "playwright test",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:codegen": "playwright codegen",
    "test:playwright:report": "npx playwright show-report"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "lodash": "^4.17.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/js": "^9.15.0",
    "@playwright/test": "^1.49.1",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "~5.7.0",
    "typescript-eslint": "^8.15.0",
    "vite": "^6.0.1"
  }
}
